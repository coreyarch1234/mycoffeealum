<p id="notice"><%= notice %></p>
<div class="result-wrapper col-md-8 col-md-offset-2">
  <table class="table table-filter">
    <tbody>
      <tr>
        <td>
          <div class="media">
            <div class="col-md-2">
              <%= link_to image_tag('https://s3.amazonaws.com/uifaces/faces/twitter/fffabs/128.jpg'), @user, :class=>"pull-left"%>
            </div>
            <div class="col-md-10">
              <span class="media-meta pull-right"><%= @user.role %></span>
              <h3><%= "#{@user.first_name} #{@user.last_name}" %></h3>
              <h4> <%= "#{@user.coffee_title}" %></h4>
              <hr />
              <h4> <%= "#{@user.about_me}" %></h4>
              <hr />
              <h4> <%= "#{@user.contact}" %></h4>
              <%= link_to 'Back', users_path %>
              <% if current_user == @user %>
                <%= link_to 'Edit', edit_user_path(@user) %>
              <% end %>
            </div>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
<div>

<style>
    /*Profile Picture Movement Up*/
    .col-md-2{
        margin-right: 50px;
    }

    /*About Me Movement Down*/
    .col-md-10 > h4{
        margin-top: 30px;
    }


</style>
