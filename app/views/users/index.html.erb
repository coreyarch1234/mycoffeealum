<div class="container">
    <div class="row">
        <div class="col-6 col-md-4" id="tag-filter" >
              <header class="major">
                <h3>Filter by Tags.</h3>
              </header>
              <section id="search" class="alt">
                <div class="tag-thin-gap"><p><%= link_to "tag", root_path %></p></div>
              </section>
        </div>

        <div class="col-md-7" id="find">
            <section>
              <header class="major">
                  <h2><%="Find" %></h2>
              </header>
              <section id="search" class="alt">
                  <%= form_tag users_path, :method => 'get' do %>
                      <%= text_field_tag :search, params[:search], :placeholder => "Search", :id => "query" %>
                  <% end %>

              </section>
              <div class="posts">

              </div>
            </section>

        </div>
    </div>

</div>
