<header id="header">
  <%= link_to image_tag("logo.png"), users_path, class: 'logo' %>
  <ul class="icons">
    <% if user_signed_in? %>
      <li><%= link_to "Profile",  user_path(current_user), class: "logo" %></li>
      <% if current_user.admin %>
        <li><%= link_to "Tags",  tags_path, class: "logo" %></li>
      <% end %>
      <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "logo" %></li>
    <% else %>
      <li><%= link_to "Login", new_user_session_path, class: "logo" %></li>
      <li><%= link_to "Sign Up", new_user_registration_path, class: "logo" %></li>
    <% end %>
  </ul>

</header>
